<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.caitlin.cookhelper.AddRecipe">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/cookhelper"
        android:id="@+id/titleEditRecipe"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@android:color/black" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/edit_recipe"
        android:id="@+id/subtitleEditRecipe"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewEdit" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/recipe_name"
                android:id="@+id/txtviewNameEdit"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextNameEdit"
                android:layout_gravity="start"
                android:hint="@string/enter_the_name_of_your_recipe_here" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/type"
                android:id="@+id/txtviewTypeEdit"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextTypeEdit"
                android:layout_gravity="start"
                android:hint="@string/enter_the_recipe_type_here" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/category"
                android:id="@+id/txtviewCategoryEdit"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextCategoryEdit"
                android:layout_gravity="start"
                android:hint="@string/enter_the_recipe_category_here" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/prep_time"
                    android:id="@+id/txtviewPrepTimeEdit"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/cook_time"
                    android:id="@+id/txtviewCookTimeEdit"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextPrepTimeEdit"
                    android:layout_gravity="start"
                    android:hint="@string/enter_the_time_here"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextCookTimeEdit"
                    android:layout_gravity="end"
                    android:hint="@string/enter_the_time_here"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/number_of_servings"
                    android:id="@+id/txtviewServingsEdit"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/number_of_calories"
                    android:id="@+id/txtviewCaloriesEdit"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_gravity="end" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextServingsEdit"
                    android:layout_gravity="start"
                    android:hint="@string/enter_the_servings_here"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextCaloriesEdit"
                    android:layout_gravity="end"
                    android:hint="@string/enter_the_calories_here"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/outerInstructionLLEdit">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/instructions"
                    android:id="@+id/instructionHeadingEdit"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/innerInstructionLLEdit">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstInstructionEdit"
                        android:layout_gravity="end"
                        android:hint="@string/any_new_instructions"
                        android:layout_weight="1" />


                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/addInstructionButtonEdit"
                        android:layout_gravity="bottom|end"
                        android:background="@android:drawable/ic_input_add"
                        android:clickable="true"
                        android:contentDescription="@string/click_to_add_instructions" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/addedInstructionLLEdit"></LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/outerIngredientLLEdit" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/ingredients"
                    android:id="@+id/ingredientsHeadingEdit"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayoutEdit" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/quantity"
                        android:id="@+id/txtviewQuantityEdit"
                        android:layout_weight=".4"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/measure"
                        android:id="@+id/txtviewUnitEdit"
                        android:layout_weight=".6"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/ingredient_name"
                        android:id="@+id/txtviewIngredientNameEdit"
                        android:layout_weight="1"
                        android:textAlignment="center" />

                    <Space
                        android:layout_width="40dp"
                        android:layout_height="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/innerIngredientLLEdit" >

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/eTextQuantityEdit"
                        android:layout_weight=".4"
                        android:inputType="number|numberDecimal"
                        android:hint="@string/quantity_hint"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/eTextUnitEdit"
                        android:layout_weight=".6"
                        android:hint="@string/measure_hint"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/eTextIngredientNameEdit"
                        android:layout_weight="1"
                        android:hint="@string/ingredient_name_hint"
                        android:textAlignment="center" />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@android:drawable/ic_menu_delete"
                        android:id="@+id/deleteIngredientButtonEdit"
                        android:background="@null"
                        android:clickable="true"/>

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/addIngredientButtonEdit"
                        android:background="@android:drawable/ic_input_add"
                        android:clickable="true"
                        android:contentDescription="@string/button_to_add_the_ingredients" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/addedIMLLEdit"></LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:id="@+id/saveRecipeButtonEdit"
                    android:layout_weight="1"
                    android:background="@drawable/custombutton"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@android:string/cancel"
                    android:id="@+id/cancelEditButton"
                    android:layout_weight="1"
                    android:background="@drawable/custombutton"/>
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
