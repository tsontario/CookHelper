<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.caitlin.cookhelper.AddRecipe">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/cookhelper"
        android:id="@+id/titleAddRecipe"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@android:color/black" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/add_a_recipe"
        android:id="@+id/subtitleAddRecipe"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/recipe_name"
                android:id="@+id/txtviewName"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextName"
                android:layout_gravity="start"
                android:hint="@string/enter_the_name_of_your_recipe_here" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/type"
                android:id="@+id/txtviewType"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextType"
                android:layout_gravity="start"
                android:hint="@string/enter_the_recipe_type_here" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/category"
                android:id="@+id/txtviewCategory"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextCategory"
                android:layout_gravity="start"
                android:hint="@string/enter_the_recipe_category_here" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/prep_time"
                    android:id="@+id/txtviewPrepTime"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/cook_time"
                    android:id="@+id/txtviewCookTime"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextPrepTime"
                    android:layout_gravity="start"
                    android:hint="@string/enter_the_time_here"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextCookTime"
                    android:layout_gravity="end"
                    android:hint="@string/enter_the_time_here"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/number_of_servings"
                    android:id="@+id/txtviewServings"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/number_of_calories"
                    android:id="@+id/txtviewCalories"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:layout_gravity="end" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextServings"
                    android:layout_gravity="start"
                    android:hint="@string/enter_the_servings_here"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextCalories"
                    android:layout_gravity="end"
                    android:hint="@string/enter_the_calories_here"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/outerInstructionLL">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/instructions"
                    android:id="@+id/instructionHeading"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/newInstructionLL">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/firstInstruction"
                        android:layout_gravity="end"
                        android:hint="@string/enter_first_instruction_here"
                        android:layout_weight="1" />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/addInstructionButton"
                        android:layout_gravity="bottom|end"
                        android:background="@android:drawable/ic_input_add"
                        android:clickable="true"
                        android:contentDescription="@string/click_to_add_instructions"
                        android:onClick="addNewInstruction"
                        android:focusable="true" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/addedInstructionLL"></LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/outerIngredientLL" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/ingredients"
                    android:id="@+id/ingredientsHeading"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ingredientHeadingLL" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/quantity"
                        android:id="@+id/txtviewQuantity"
                        android:layout_weight=".4"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/measure"
                        android:id="@+id/txtviewUnit"
                        android:layout_weight=".6"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/ingredient_name"
                        android:id="@+id/txtviewIngredientName"
                        android:layout_weight="1"
                        android:textAlignment="center" />

                    <Space
                        android:layout_width="40dp"
                        android:layout_height="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/innerIngredientLL" >

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/eTextAmount"
                        android:layout_weight=".4"
                        android:hint="@string/quantity_hint"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/eTextUnit"
                        android:layout_weight=".6"
                        android:hint="@string/measure_hint"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/eTextIngredientName"
                        android:layout_weight="1"
                        android:hint="@string/ingredient_name_hint"
                        android:textAlignment="center" />

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/addIngredientButton"
                        android:background="@android:drawable/ic_input_add"
                        android:contentDescription="@string/button_to_add_the_ingredients"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:onClick="addNewIngredientMeasure"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/addedIMLL"></LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:id="@+id/saveRecipeButton"
                    android:layout_weight="1"
                    android:background="@drawable/custombutton"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@android:string/cancel"
                    android:id="@+id/cancelAddButton"
                    android:layout_weight="1"
                    android:background="@drawable/custombutton"/>
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
